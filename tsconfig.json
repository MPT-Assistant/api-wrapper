{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
